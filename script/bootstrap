#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"
  source normalize

  local url_concourse_Darwin="https://github.com/concourse/concourse/releases/download/v${CONCOURSE_VERSION}/concourse_darwin_amd64"
  local url_concourse_Linux="https://github.com/concourse/concourse/releases/download/v${CONCOURSE_VERSION}/concourse_linux_amd64"

  local url_concourse="url_concourse_$(uname -s)"
  local fnm_concourse="$(basename "${!url_concourse}")-${CONCOURSE_VERSION}"
  cache curl "$fnm_concourse" "${!url_concourse}"

  mkdir -p "$shome/bin"
  pushd "$shome/bin"
  cp "${DATA}/cache/curl/$fnm_concourse" "$shome/bin/concourse"
  chmod 755 "$shome/bin/concourse"
  popd

  local url_fly_Darwin="https://github.com/concourse/concourse/releases/download/v${CONCOURSE_VERSION}/fly_darwin_amd64"
  local url_fly_Linux="https://github.com/concourse/concourse/releases/download/v${CONCOURSE_VERSION}/fly_linux_amd64"

  local url_fly="url_fly_$(uname -s)"
  local fnm_fly="$(basename "${!url_fly}")-${CONCOURSE_VERSION}"
  cache curl "$fnm_fly" "${!url_fly}"

  mkdir -p "$shome/bin"
  pushd "$shome/bin"
  cp "${DATA}/cache/curl/$fnm_fly" "$shome/bin/fly"
  chmod 755 "$shome/bin/fly"
  popd
}

main "$@"
